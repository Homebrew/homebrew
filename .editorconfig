# http://editorconfig.org

[Library/{brew.rb,Homebrew/**.rb}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Library/Formula/*.rb]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
# trailing whitespace is crucial for patches
trim_trailing_whitespace = false

[share/doc/homebrew/**.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[.travis.yml]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
